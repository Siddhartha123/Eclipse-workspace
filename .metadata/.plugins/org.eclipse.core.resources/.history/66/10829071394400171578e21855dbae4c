package com.mkyong.rest;
 
import java.sql.SQLException;

import javax.ws.rs.GET;
import javax.ws.rs.Path;
import javax.ws.rs.Produces;
import javax.ws.rs.QueryParam;
import javax.ws.rs.core.MediaType;
import javax.ws.rs.core.Response;
 
@Path("/hello")
public class HelloWorldService {
 
	@GET
	@Path("/query")
	public String getMsg(@QueryParam("param") String par) throws ClassNotFoundException, SQLException, InterruptedException {
		ThreadPool t=new ThreadPool();
		String output =ThreadPool.init();
		String output = "<html> " + "<title>" + "Web Service"+ "</title>"
        + "<body><h1>" + "Jersey say : " + par + "</h1></body>" + "</html> ";
		
		return output;
		//return Response.status(200).entity(output).build();
 
	}
 
}